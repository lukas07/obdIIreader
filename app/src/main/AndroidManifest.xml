<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lukas.bluetoothtest">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/devList_selDev"
            android:theme="@android:style/Theme.Holo.Dialog" />

        <service
            android:name=".ObdService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".StartTripActivity"
            android:label="@string/title_activity_start_your_trip_acitivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".RunningTripActivity"
            android:label="@string/title_activity_running_trip"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StoppedTripActivity"
            android:label="@string/title_activity_stopped_trip"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".TripListActivity"
            android:label="@string/list_title"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <provider
            android:name=".TripProvider"
            android:authorities="com.example.lukas.bluetoothtest.provider"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".TripDetailActivity"
            android:label="@string/detail_title"
            android:parentActivityName=".TripListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TripListActivity" />
        </activity>
    </application>

</manifest>