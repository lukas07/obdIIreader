<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lukas.bluetoothtest.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/bt_startTrip"
            android:layout_width="240dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/main_startTrip"
            android:theme="@style/StartButton" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <Button
            android:id="@+id/bt_activateBt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/stat_sys_data_bluetooth"
            android:backgroundTint="@android:color/darker_gray"
            android:text="@string/main_bt_disabled" />
        <Button
            android:id="@+id/bt_selectDev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/main_dev" />

        <Button
            android:id="@+id/bt_activateGps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_mylocation"
            android:backgroundTint="@android:color/darker_gray"
            android:text="@string/main_bt_disabled" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:text="Hier stehen die Trips
Trip 1
Trip 2"
        android:textSize="20sp" />


        <Button
                android:id="@+id/bt_showTrips"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/main_showTrips" />


</LinearLayout>
