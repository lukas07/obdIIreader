<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:activity="com.example.lukas.bluetoothtest.StoppedTripActivity"
    tools:showIn="@layout/activity_stopped_trip">

    <TableRow>
    <TextView
        android:id="@+id/tv_tsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Timestamp_Start"
        app:layout_constraintTop_toBottomOf="@+id/et_mileageEnd"
        app:layout_constraintRight_toLeftOf="@+id/tv_tsEnd"
        android:layout_marginRight="77dp" />

    <TextView
        android:id="@+id/tv_tsEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timestamp_End"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/et_mileageEnd"
        android:layout_marginRight="53dp"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/textInputLayout2">

    </android.support.design.widget.TextInputLayout>

    </TableRow>

    <TableRow>
    <EditText
        android:id="@+id/et_mileageEnd"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/stop_odometer"
        android:inputType="numberSigned"
        android:maxLength="9"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        tools:layout_editor_absoluteX="8dp" />

    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="148dp"
        android:text="@string/stop_save"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="427dp" />

    </TableRow>

    <TableRow>
    <FrameLayout
        android:id="@+id/stopped_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </TableRow>

</TableLayout>
