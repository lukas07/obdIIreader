<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:activity="com.example.lukas.bluetoothtest.activity.TripDetailActivity"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/detail_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/detail_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"/>


    </TableRow>
    <!--<TextView
        android:id="@+id/tv_detail_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entry_init" /> -->

</TableLayout>


