<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lukas.bluetoothtest.StartYourTripActivity"
    tools:showIn="@layout/activity_start_your_trip_acitivity">

    <Spinner
        android:id="@+id/sp_tripMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        android:layout_marginLeft="168dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/textInputLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="212dp">

        <EditText
            android:id="@+id/et_driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver's Name"
            android:inputType="textPersonName" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <EditText
                android:id="@+id/et_kmDriven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current odometer value"
                android:inputType="numberSigned" />

        </android.support.design.widget.TextInputLayout>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/bt_Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="114dp"
        android:layout_weight="1"
        android:text="@string/start_go"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

</android.support.constraint.ConstraintLayout>
